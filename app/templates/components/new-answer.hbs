{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="answerContent">Answer</label><br>
          {{textarea value=answerContent id="answerContent"}}
        </div>
        <button {{action 'saveAnswer' answer}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}} class="btn btn-success">New Answer</button>
{{/if}}
